{
    "compilerOptions": {
      "outDir": "dist",
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
    },
    "lib": [
        "esnext"
    ],
    "exclude": [
      "node_modules/",
      "dist/",
      "tests/fixtures/"
    ],
    "include": [
      "examples/*.ts",
      "scripts/**/*.ts",
      "src/**/*.ts",
      "tests/**/*.ts"
    ],
  }